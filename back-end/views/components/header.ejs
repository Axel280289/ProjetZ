<header id="header">
  <div class="logout">
    <% if(!isConnected) { %> <% } else { %>
    <a href="#" onclick="openLogoutModal()">
      <i class="fa-solid fa-power-off" style="color: #1ee718"></i
    ></a>
    <% } %>
  </div>
  <nav id="nav" class="">
    <img class="logo" src="/images/zevent-logo.webp" alt="Logo du Zevent" />
    <div id="menu-icone">
      <div id="logo-menu">
        <a href="http://127.0.0.1:5500/front-end/index.html"
          ><i class="fa-solid fa-house fa-2xl" style="color: #ffffff"></i
        ></a>
        <a href="/admin"
          ><i class="fa-solid fa-building fa-2xl" style="color: #ffffff"></i
        ></a>
      </div>
    </div>
    <ul id="menu-principal">
      <li><a href="http://localhost:5500/">Site</a></li>
      <% if(!isConnected) { %>
      <!-- Si l'utilisateur est connecté il peut accéder aux pages Admin et Déconnexion -->
      <% } else { %>
      <li><a href="/admin">Dashboard</a></li>
      <% } %>
    </ul>

    <div class="btn_burger">
      <div id="icons">
        <i class="fa-solid fa-bars fa-2xl" style="color: #ffffff"></i>
      </div>
      <div class="cross_burger">
        <i class="fa-solid fa-xmark fa-2xl" style="color: #ffffff"></i>
      </div>
    </div>
  </nav>

  <div class="rs">
    <a href="https://twitter.com/ZEventfr/header_photo"
      ><i class="fa-brands fa-twitter fa-l" style="color: #ffffff"></i
    ></a>
    <a href="https://www.instagram.com/zeventfr/?hl=fr"
      ><i class="fa-brands fa-instagram fa-l" style="color: #ffffff"></i
    ></a>
    <a href="https://www.reddit.com/r/zevent/"
      ><i class="fa-brands fa-reddit-alien fa-l" style="color: #ffffff"></i
    ></a>
  </div>
</header>