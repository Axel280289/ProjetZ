<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com%22%3E/" />
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Caveat&family=Quicksand&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/backOffice.css" />
    <link rel="stylesheet" href="/styles/style.css" />
    <title>Document</title>
  </head>
  <body>
    <%- include('../../components/header.ejs') %>
    <div class="listMenu">
      <a href="/admin">Dashboard</a>
      <a href="/users/create">Ajouter un utilisateur</a>
    </div>
    <main class="listUser">
      <h2>Liste des utilisateurs</h2>
      <% if(successDeleteUser) { %>
      <p><%= successDeleteUser %></p>
      <% } %> <% if(users) { %>
      <table>
        <% users.forEach(user => { %>
        <tr>
          <td data-label="Nom">
            <a href="/users/<%= user._id %>">
              <%= user.lastname %> <%= user.firstname %>
            </a>
          </td>
          <td data-label="email"><%= user.email %></td>
          <td data-label="Action">
            <a class="bgGreen" href="/users/<%= user._id %>/update"
              ><i class="fa-regular fa-pen-to-square" style="color: #ffffff"></i
            ></a>
          </td>
          <!-- <td data-label="Action">
            <a class="bgGreen" href="/users/<%= user._id %>/update"
              ><i class="fa-solid fa-lock"></i>
            </a>
          </td> -->
          <td data-label="Action">
            <a class="bgRed" href="/users/<%= user._id %>/delete"
              ><i class="fa-solid fa-trash-can" style="color: #ffffff"></i
            ></a>
          </td>
        </tr>
        <% }) %>
      </table>
      <% } %>

      <!-- test -->

      <%- include('../../components/logout.ejs') %>

      <!-- test -->
    </main>
    <script src="/scripts/burger.js"></script>
    <script
      src="https://kit.fontawesome.com/a00d3e0d3e.js"
      crossorigin="anonymous"
    ></script>
    <script src="/scripts/header.js"></script>
  </body>
</html>
