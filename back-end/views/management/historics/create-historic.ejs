<body>
   <%- include('../../components/header.ejs') %> <% if (successCreateHistoric) { %>
      <div role="alert"><%= successCreateHistoric %></div>
      <% } %> 
      
   <main class="updateUser">

      <section class="historics-container">

         <h1>Ajouter un historique</h1>
     
               <form class="connect" action="/streamers/create/add" method="post" enctype="multipart/form-data">

                  <div>
                     <input type="date" id="date" required>
                     <label for="date">
                        Dates
                     </label>
                  </div>

                  <div>
                     <input type="number" id="amount" minlength="1" required>
                     <label for="amount">
                        Montant
                     </label>
                  </div>

                  <div>
                     <input type="text" id="associations" minlength="1" required>
                     <label for="associations">
                        Associations
                     </label>
                  </div>

                  <button class="create-historic-submit">
                     Ajouter
                  </button>

                  <a href="/historics.ejs">Revenir Ã  la liste des historiques</a>
                  
                  
               </form>
               
      </section>
   </main>

   <footer>
    <%- include('../../components/footer.ejs') %>
   </footer>
    <script src="/scripts/burger.js"></script>
    <script
      src="https://kit.fontawesome.com/a00d3e0d3e.js"
      crossorigin="anonymous"
    ></script>
    <script src="/scripts/header.js"></script>
</body>
</html>